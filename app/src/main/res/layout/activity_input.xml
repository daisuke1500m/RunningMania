<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/input_background">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/distance"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <AutoCompleteTextView
        android:id="@+id/editText1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:hint="@string/hint1"
        android:inputType="numberDecimal"
        android:textSize="18sp" >

        <requestFocus android:layout_width="wrap_content" />
    </AutoCompleteTextView>

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignTop="@+id/editText1"
        android:layout_toEndOf="@+id/editText1"
        android:onClick="OnButtonClick_changeunit"
        android:text="@string/kirometers" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button1"
        android:onClick="OnButtonClick_dot"
        android:text="@string/dot"
        android:textSize="23sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editText1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="OnButtonClick_fivekm"
            android:text="@string/fivekm" />

        <Button
            android:id="@+id/button4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="OnButtonClick_tenkm"
            android:text="@string/tenkm" />

        <Button
            android:id="@+id/button5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="OnButtonClick_hurf"
            android:text="@string/hurf" />

        <Button
            android:id="@+id/button6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="OnButtonClick_full"
            android:text="@string/full" />

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner1"
        android:text="@string/time"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"

        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editText2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hour"
            android:layout_weight="2"
            android:textSize="20sp"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hours"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/editText3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="@string/wo"
            android:layout_weight="2"
            android:textSize="20sp"
            android:maxLength="2"
            android:inputType="number"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minutes"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/editText4"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:hint="@string/sec"
            android:maxLength="5"
            android:textSize="20sp"
            android:layout_weight="2"
            android:inputType="number"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seconds"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/color2"
        android:onClick="OnButtonClick_gotodesc"
        android:text="@string/howtouse"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button7"
        android:layout_alignTop="@+id/button7"
        android:layout_marginStart="140dp"
        android:background="@drawable/color"
        android:onClick="OnButtonClick_calculation"
        android:text="@string/docalculate" />

    <TextView
    android:id="@+id/textView9"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/view1"
    android:text="@string/inputmode"
    android:textAppearance="?android:attr/textAppearanceLarge"

     />

<LinearLayout
    android:id="@+id/linearLayout3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView9"
    android:layout_alignParentEnd="true"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_weight="1.5"
        android:text="@string/tidiin"
        android:textSize="14sp"
        android:background="#80ffff" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="OnButtonClick_changeinput"
        android:text="@string/avarageone"
        android:textSize="14sp" />
           </LinearLayout>

	<View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button7"
        android:layout_marginTop="20dp"
        android:background="#f8bb20" />

	<!--<net.nend.android.NendAdView
        android:id="@+id/nend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        NendApiKey="81bf6e27c6129afa4d6910ddee2e128461eba6da"
        NendSpotId="164832" >
    </net.nend.android.NendAdView>-->

	<Button
	    android:id="@+id/button11"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/linearLayout3"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="7dp"
	    android:onClick="OnButtonClick_valuation"
	    android:text="@string/evaluation"/>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adunitid"/>

</RelativeLayout>