<Button
    android:id="@+id/button1"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="40dp"
    android:layout_marginTop="250dp"
    android:background="@mipmap/color2"
    android:onClick="OnButtonClick_gotodesc"
    android:text="@string/howtouse"
    android:textSize="15sp" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="31dp"
    android:text="@string/avarageone"
    android:textAppearance="?android:attr/textAppearanceLarge" />

<LinearLayout
    android:id="@+id/linear1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_below="@+id/textView3"
    android:layout_alignParentStart="true"
    android:orientation="horizontal" >
    
    <EditText
       android:id="@+id/editText1"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_weight="2"
       android:hint="@string/wo"
       android:textSize="25sp"
       android:inputType="number"
       android:maxLength="2" />
               
    <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:text="@string/minutes"
       android:textSize="25sp"
        />
    
    <EditText 
       android:id="@+id/editText2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="2"
       android:hint="@string/sec"
       android:textSize="25sp"
       android:inputType="number"
       android:maxLength="2"
       />
    
    <TextView 
       android:id="@+id/textView5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:text="@string/seconds"
       android:textSize="25sp"
       />

</LinearLayout>

<Button
    android:id="@+id/button2"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/button1"
    android:layout_alignStart="@+id/button1"
    android:layout_marginStart="140dp"
    android:background="@mipmap/color"
    android:onClick="OnButtonClick_calculation2"
    android:text="@string/docalculate" />

<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/view1"
    android:text="@string/inputmode"
    android:textAppearance="?android:attr/textAppearanceLarge"
    
     />

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView6"
    android:layout_alignParentEnd="true"
    android:orientation="horizontal" >
    
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="OnButtonClick_changeinput"
        android:text="@string/tidiin"
        android:textSize="14sp" />
    
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_weight="1.19"
        android:background="#80ffff"
        android:text="@string/avarageone"
        android:textSize="14sp" />
    
</LinearLayout>

<View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="20dp"
        android:background="#f8bb20" />

<Button
    android:id="@+id/button5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linearLayout"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="7dp"
    android:onClick="OnButtonClick_valuation"
    android:text="@string/evaluation" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

</RelativeLayout>
